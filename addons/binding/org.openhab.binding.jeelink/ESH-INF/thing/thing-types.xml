<?xml version="1.0" encoding="UTF-8"?>
<thing:thing-descriptions bindingId="jeelink" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:thing="http://eclipse.org/smarthome/schemas/thing-description/v1.0.0"
	xsi:schemaLocation="http://eclipse.org/smarthome/schemas/thing-description/v1.0.0 http://eclipse.org/smarthome/schemas/thing-description-1.0.0.xsd">

	<!-- JeeLink USB Receiver Bridge Type -->
	<bridge-type id="jeelink">
		<label>@text/bridge-type.jeelink.label</label>
		<description>@text/bridge-type.jeelink.description</description>

		<config-description>
			<parameter name="portName" type="text" required="true">
				<label>@text/parameter.portname.label</label>
				<description>@text/parameter.portname.description</description>
				<default>serial:///dev/ttyUSB0</default>
			</parameter>
			<parameter name="sketchName" type="text" required="true">
				<label>@text/parameter.sketchname.label</label>
				<description>@text/parameter.sketchname.description</description>
				<default>LaCrosseITPlusReader</default>

				<options>
					<option value="LaCrosseITPlusReader">LaCrosseITPlusReader</option>
					<option value="ec3kSerial">ec3kSerial</option>
				</options>
			</parameter>
            <parameter name="initCommands" type="text" required="false">
                <label>@text/parameter.initcommands.label</label>
                <description>@text/parameter.initcommands.description</description>
            </parameter>
		</config-description>

	</bridge-type>

	<!-- Lacrosse Temperature Sensor Thing Type -->
	<thing-type id="lacrosse">
		<supported-bridge-type-refs>
			<bridge-type-ref id="jeelink" />
		</supported-bridge-type-refs>

        <label>@text/thing-type.lacrosse.label</label>
        <description>@text/thing-type.lacrosse.description</description>

		<channels>
			<channel id="sensorId" typeId="sensor-id-channel" />
			<channel id="sensorType" typeId="sensor-type-channel" />
			<channel id="temperature" typeId="temperature-channel" />
			<channel id="humidity" typeId="humidity-channel" />
			<channel id="batteryNew" typeId="battery-new-channel" />
			<channel id="batteryLow" typeId="battery-low-channel" />
		</channels>

		<config-description>
			<parameter name="sensorId" type="text" required="true">
				<label>@text/parameter.sensorid.label</label>
				<description>@text/parameter.sensorid.description</description>
			</parameter>
			<parameter name="updateInterval" type="integer" required="true" min="5" max="3600" unit="s" step="5">
                <label>@text/parameter.updateinterval.label</label>
                <description>@text/parameter.updateinterval.description</description>
				<default>60</default>
			</parameter>
			<parameter name="sensorTimeout" type="integer" required="true" min="5" max="3600" unit="s" step="5">
                <label>@text/parameter.sensortimeout.label</label>
                <description>@text/parameter.sensortimeout.description</description>
				<default>60</default>
			</parameter>
			<parameter name="bufferSize" type="integer" required="true" min="0" max="100">
                <label>@text/parameter.buffersize.label</label>
                <description>@text/parameter.buffersize.description</description>
				<default>20</default>
			</parameter>
			<parameter name="minTemp" type="decimal" required="true">
                <label>@text/parameter.mintemp.label</label>
                <description>@text/parameter.mintemp.description</description>
				<default>19</default>
			</parameter>
			<parameter name="maxTemp" type="decimal" required="true">
                <label>@text/parameter.maxtemp.label</label>
                <description>@text/parameter.maxtemp.description</description>
				<default>25</default>
			</parameter>
		</config-description>
	</thing-type>

	<!-- EC3000 Power Monitor Thing Type -->
	<thing-type id="ec3k">
		<supported-bridge-type-refs>
			<bridge-type-ref id="jeelink" />
		</supported-bridge-type-refs>

        <label>@text/thing-type.ec3k.label</label>
        <description>@text/thing-type.ec3k.description</description>

		<channels>
			<channel id="sensorId" typeId="sensor-id-channel" />
			<channel id="currentWatt" typeId="current-watt-channel" />
			<channel id="maxWatt" typeId="max-watt-channel" />
			<channel id="consumptionTotal" typeId="consumption-total-channel" />
			<channel id="applianceTime" typeId="appliance-time-channel" />
			<channel id="sensorTime" typeId="sensor-time-channel" />
			<channel id="resets" typeId="resets-channel" />
		</channels>

		<config-description>
			<parameter name="sensorId" type="text" required="true">
                <label>@text/parameter.sensorid.label</label>
                <description>@text/parameter.sensorid.description</description>
			</parameter>
			<parameter name="updateInterval" type="integer" required="true" min="0" max="3600" unit="s" step="5">
                <label>@text/parameter.updateinterval.label</label>
                <description>@text/parameter.updateinterval.description</description>
				<default>60</default>
			</parameter>
			<parameter name="sensorTimeout" type="integer" required="true" min="5" max="3600" unit="s" step="5">
                <label>@text/parameter.sensortimeout.label</label>
                <description>@text/parameter.sensortimeout.description</description>
				<default>60</default>
			</parameter>
			<parameter name="bufferSize" type="integer" required="true" min="0" max="100">
                <label>@text/parameter.buffersize.label</label>
                <description>@text/parameter.buffersize.description</description>
				<default>20</default>
			</parameter>
		</config-description>
	</thing-type>

